#!/usr/bin/env sh

# Ensure we’re in the backend directory before checking formatting
BACKEND_DIR="$(git rev-parse --show-toplevel)/backend"

echo "Checking Rust formatting in backend..."
cd "$BACKEND_DIR" || exit 1

cargo fmt --all -- --check
FORMAT_STATUS=$?

if [ $FORMAT_STATUS -ne 0 ]; then
  echo "❌ Rust formatting check failed in backend. Run 'cargo fmt' in backend/ and try again."
  exit 1
fi

exit 0
